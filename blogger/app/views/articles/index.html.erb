<!-- ARTICLES INDEX -->


<h1> List of All Articles</h1>


<ul id = "articles">
<% @articles.each do |a| %>
<li><h3> <%= link_to a.title, article_path(a)%></h3><br> 
<h4> <i><%= a.body %></h4></i></br>
</li>
<% end %>
</ul>

<br><br>

<%= link_to "Create New Article", new_article_path, class: "new_article" %>
